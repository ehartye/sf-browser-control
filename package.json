{
  "name": "sf-browser-control-mcp",
  "version": "1.0.0",
  "description": "MCP server for controlling Salesforce browser sessions via SF CLI authentication",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts"
  },
  "keywords": [
    "mcp",
    "salesforce",
    "browser-automation",
    "playwright"
  ],
  "author": "ehartye",
  "repository": {
    "type": "git",
    "url": "https://github.com/ehartye/sf-browser-control.git"
  },
  "homepage": "https://github.com/ehartye/sf-browser-control#readme",
  "bugs": {
    "url": "https://github.com/ehartye/sf-browser-control/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "playwright": "^1.40.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
